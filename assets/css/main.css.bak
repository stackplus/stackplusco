@import url(https://fonts.googleapis.com/css?family=Open+Sans:400,700,300);


html { 
	height: 100%;
	box-sizing: border-box;
}

/**,
*:before,
*:after {
	box-sizing: inherit;
}*/

body {
	position: relative;
	margin: 0;
	padding-top: 70px;
	/*padding-bottom: 350px;*/
	min-height: 100%;
}

footer { 
	position: absolute;
	right: 0;
	bottom: -1;
	left: 0;
	padding: 1rem;
	background-color: black; 
	min-height: 350px; 
	font-family: 'Open Sans', sans-serif;
}

.paddingtop-bottom {  margin-top:50px;}
.logofooter { margin-bottom:10px; font-size:25px; color:#d9d6d6; font-weight:700;}
.heading7 { font-size:21px; font-weight:700; color:#d9d6d6; margin-bottom:22px;}

.footerleft { margin-top:50px; padding:0 36px; }
.footerleft p { color:gray; font-size:12px !important; font-family: 'Open Sans', sans-serif; margin-bottom:15px;}
.footerleft p i { width:20px; color:#999;}

.footer-ul { list-style-type:none;  padding-left:0px; margin-left:2px;}
.footer-ul li { line-height:29px; font-size:12px;}
.footer-ul li a { color:#a0a3a4; transition: color 0.2s linear 0s, background 0.2s linear 0s; }
.footer-ul i { margin-right:10px;}
.footer-ul li a:hover {transition: color 0.2s linear 0s, background 0.2s linear 0s; color:#ff670f; }

.footer-post p { font-size:12px; color:#ced7db; line-height:20px;}
.footer-post p span { display:block; color:#8f8f8f;}

.social:hover {
	-webkit-transform: scale(1.1);
	-moz-transform: scale(1.1);
	-o-transform: scale(1.1);
}

.icon-ul { list-style-type:none !important; margin:0px; padding:0px;}
.icon-ul li { line-height:75px; width:100%; float:left;}
.icon { float:left; margin-right:5px;}

.copyright { 
	background-color:black;
	min-height:40px;
}
.copyright p { text-align:left; color:gray; padding:10px 0; margin-bottom:0px;}

.bottom_ul { list-style-type:none; float:right; margin-bottom:0px;}
.bottom_ul li { float:left; line-height:40px;}
.bottom_ul li:after { content:"/"; color:#ced7db; margin-right:8px; margin-left:8px;}
.bottom_ul li a { color:#ced7db;  font-size:12px;}